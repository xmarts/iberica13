<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>	
  		<record id="sh_purchase_price_history_res_config_settings" model="ir.ui.view">
			<field name="name">Purchase Price History Res Config Settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>			
			<field name="arch" type="xml">		
				
				<xpath expr="//div[@data-key='purchase']" position="inside">
					<h2>Purchase Price History</h2>
					<div class="row mt16 o_settings_container">
					
						<div class="col-xs-12 col-md-6 o_setting_box" >
	                    	<div class="o_setting_left_pane">
	                        </div>
	                        <div class="o_setting_right_pane">
		                        <label for="item_limit_purchase"/>
	                            <div class="text-muted">
	    	                        Number of items display in product purchase price history
			                    	<field name="item_limit_purchase"/>
	                            </div>
	                        </div>
	                    </div>
	                    
 						<div class="col-xs-12 col-md-6 o_setting_box" >
	                    	<div class="o_setting_left_pane">
	                        </div>
	                        <div class="o_setting_right_pane">
		                        <label for="record_based_on_purchase"/>
	                            <div class="text-muted">
	    	                        Purchase order product price history based on
	                            </div>
 								<div class="content-group">
                                    <div class="mt16">	              
			                    		<field name="record_based_on_purchase" widget="radio" options="{'horizontal':true}"/>
	                            	</div>
								</div>	                            	
	                        </div>
	                    </div>
	                    
                    </div>
				</xpath>
				
			</field>
		</record>
	</data>		
</odoo>
		
